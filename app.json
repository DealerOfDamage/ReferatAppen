{
  "expo": {
    "name": "ReferatAppen",
    "slug": "referatappen",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0c1117"
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0c1117"
      },
      "permissions": ["CAMERA"]
    },
    "plugins": ["expo-image-picker", "expo-mlkit-ocr"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Appen bruger kameraet til at scanne dagsordener med OCR.",
        "NSPhotoLibraryAddUsageDescription": "Appen gemmer midlertidige fotos for at kunne scanne teksten."
      }
    }
  }
}
